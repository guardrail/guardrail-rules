<ruleset name="Amazon">

<!-- Amazon.com and Amazon.co.jp redirect https to http, Amazon.ch stays on the https address, but appears to be unencrypted -->

  <!-- the trailing slash on the from here shouldn't matter since the homepage
  doesn't httpsify anyway -->

  <rule from="^http://(www\.)?amazon\.com/" to="https://www.amazon.com/" />

  <!-- amazon.co.jp, amazon.com.au -->
  <rule from="^http://(www\.)?amazon\.(com?\.[^@:/][^@:/])" 
          to="https://www.amazon.$2" />  

  <!-- amazon.fr, amazon.ca -->
  <rule from="^http://(www\.)?amazon\.([^@:/][^@:/])" 
          to="https://www.amazon.$2" />  

</ruleset>

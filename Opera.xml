<ruleset name="Opera" default_off="very buggy">
  <target host="opera.com" />
  <target host="*.opera.com" />
  <target host="myopera.com" />
  <target host="*.myopera.com" />

  <rule from="^http://opera\.com/" to="https://opera.com/" />
  <rule from="^http://([^/:@]*)\.opera\.com/" to="https://$1.opera.com/" />
  <rule from="^http://myopera\.com/" to="https://myopera.com/" />
  <rule from="^http://([^/:@]*)\.myopera\.com/" to="https://$1.myopera.com/" />
</ruleset>
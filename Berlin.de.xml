<ruleset name="Berlin.de">
  <target host="www.berlin.de" />
  <target host="berlin.de" />
  <target host="*.berlin.de" />

  <exclusion pattern="^http://action\.berlin\.de/"/>
  <rule from="^http://berlin\.de/" to="https://berlin.de/"/>
  <rule from="^http://([^/:@]*)\.berlin\.de/" to="https://$1.berlin.de/"/>
</ruleset>

<ruleset name="Microsoft">
  <target host="*.microsoft.com" />
  <target host="microsoft.com" />
  <target host="blogs.msdn.com" />
  <target host="*.technet.microsoft.com" />

  <!-- ironic -->
  <exclusion pattern="^http://www\.microsoft\.com/security/" />

  <rule from="^http://(www\.)?microsoft\.com/" to="https://www.microsoft.com/"/>
  <rule from="^http://(office|office2010|store|profile|msdn|(?:social\.)?technet|go)\.microsoft\.com/" to="https://$1.microsoft.com/"/>
  <rule from="^http://blogs\.msdn\.com/" to="https://blogs.msdn.com/"/>
</ruleset>

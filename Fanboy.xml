<ruleset name="Fanboy">
  <target host="fanboy.co.nz" />
  <target host="www.fanboy.co.nz" />
  <target host="secure.fanboy.co.nz" />

  <securecookie host="^(.+\.)?fanboy\.co\.nz$" name=".*"/>
  
  <!-- Browsing the forum in https sends out a blank file as download -->
  <exclusion pattern="^http://fanboy\.co\.nz/forums/" />
  <exclusion pattern="^http://fanboy\.co\.nz/adblock/forums/" />
  <exclusion pattern="^http://www\.fanboy\.co\.nz/forums/" />
  <exclusion pattern="^http://www\.fanboy\.co\.nz/adblock/forums/" />

  <rule from="^http://(www\.)?fanboy\.co\.nz/" to="https://secure.fanboy.co.nz/"/>
  <rule from="^http://secure\.fanboy\.co\.nz/" to="https://secure.fanboy.co.nz/"/>
</ruleset>

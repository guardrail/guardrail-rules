<ruleset name="xkcd">
	<target host="xkcd.com" />
	<target host="www.xkcd.com" />
	<target host="xkcd.org" />
	<target host="www.xkcd.org" />
	<rule from="^http://(www\.)?xkcd\.(com|org)/"
		to="https://www.xkcd.com/" />
	<rule from="^http://store\.xkcd\.com/"
		to="https://store.xkcd.com/" />
</ruleset>

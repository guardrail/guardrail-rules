<ruleset name="Linode">
  <target host="linode.com" />
  <target host="www.linode.com" />
  <target host="stats.linode.com" />
  <target host="manager.linode.com" />

  <securecookie host="^(.+\.)?linode\.com$" name=".*"/>

  <rule from="^http://(www\.)?linode\.com/" to="https://www.linode.com/"/>
  <rule from="^http://(stats|manager)\.linode\.com/" to="https://$1.linode.com/"/>
</ruleset>
